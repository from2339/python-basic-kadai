        "# 変数を定義する\n",
        "top_side = 10  # cm\n",
        "bottom_side = 20  # cm\n",
        "height = 5  # cm\n",
        "\n",
        "# 台形の面積を計算（公式: (上辺 + 下辺) × 高さ ÷ 2）\n",
        "area = (top_side + bottom_side) * height / 2\n",
        "\n",
        "# 計算結果を出力（数値と文字列を結合して出力）\n",
        "print(str(area) + \"cm²\")"
      ]
